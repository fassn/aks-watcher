datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    sessions      Session[]
    games         Game[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Game {
    id          String  @id @default(cuid())
    userId      String
    url         String
    cover       String
    name        String
    platform    Platform
    dateCreated DateTime
    dateUpdated DateTime
    user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    prices      Price[]
}

model Price {
    id          String  @id @default(cuid())
    gameId      String
    bestPrice   Float
    date        DateTime

    game        Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)
}

model ExampleGame {
    id          String  @id @default(cuid())
    userId      String?
    url         String
    cover       String
    name        String
    platform    Platform
    bestPrice   Float
    dateCreated DateTime
    dateUpdated DateTime
}

enum Platform {
    PC
    PS4
    PS5
    XBOX_ONE
    XBOX_SERIES
}